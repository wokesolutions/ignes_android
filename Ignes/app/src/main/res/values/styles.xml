<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Welcome application theme. -->
    <style name="WelcomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFF</item>
        <item name="colorPrimaryDark">@color/colorIgnesPrimary</item>
        <item name="colorAccent">@color/colorIgnesPrimary</item>
    </style>

    <!-- Worker theme. -->
    <style name="WorkerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. #36ad6d -->
        <item name="colorPrimary">#FFFF</item>
        <item name="colorPrimaryDark">@color/colorIgnesWorker</item>
        <item name="colorAccent">#36ad6d</item>
    </style>

    <style name="ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize your theme here. -->

    </style>
</resources>
