<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:contentInsetRight="60dp"
        app:contentInsetEnd="60dp"
        android:elevation="4dp"
        android:theme="@style/ActionBar">

    </android.support.v7.widget.Toolbar>


    <android.support.v4.widget.DrawerLayout

        android:id="@+id/drawerlayout_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include layout="@layout/sidebarnavigation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/whiterectangle">
            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:background="@drawable/lupared"/>
                <Button
                    android:layout_width="28dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/ocorrenciared"/>
                <Button
                    android:layout_width="34dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/filter_icon"/>
            </LinearLayout>
        </LinearLayout>




    </android.support.v4.widget.DrawerLayout>





</LinearLayout>