<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar_feed"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ActionBar"
        app:contentInsetEnd="60dp"
        app:contentInsetRight="60dp">

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerlayout_feed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/button_grey">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:weightSum="2">

                        <ImageView
                            android:id="@+id/marker_reporter_profile_pic"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/usermarialeal" />

                        <TextView
                            android:id="@+id/marker_reporter_username"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:fontFamily="@font/quicksand_light"
                            android:textStyle="bold"
                            android:text="reporter user"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/marker_status"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:fontFamily="@font/quicksand_bold"
                            android:text="STATUS"
                            android:textColor="@color/colorIgnesGreen"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/marker_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:fontFamily="@font/quicksand_light"
                        android:gravity="right"
                        android:text="DATE" />

                    <TextView
                        android:id="@+id/marker_title"
                        android:layout_width="wrap_content"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/quicksand_light"
                        android:inputType="textPersonName"
                        android:text="TITLE"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/marker_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/quicksand_light"
                        android:text="Descrição irá aparecer aqui" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingHorizontal="10dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ocorrenciared" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/colorIgnesPrimary" />


                        <TextView
                            android:id="@+id/marker_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="#000000"
                            android:fontFamily="@font/quicksand_light"
                            android:text="ADDRESS"
                            android:textSize="15dp" />

                        <View
                            android:layout_width="10dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:background="@color/colorIgnesPrimary" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/marker_image"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_menu_camera" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="3">

                        <TextView
                            android:id="@+id/marker_comments_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_gravity="center"
                            android:text=""
                            android:textSize="10dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/commentreporticon" />

                        <TextView
                            android:id="@+id/marker_likes_number"
                            android:layout_width="wrap_content"
                            android:textColor="#000000"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textSize="10dp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:src="@drawable/likeanddislikesicon" />

                        <TextView
                            android:id="@+id/marker_dislikes_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:layout_gravity="bottom"
                            android:text=""
                            android:textSize="10dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/quicksand_light"
                            android:gravity="right"
                            android:text="Gravity: "
                            android:textColor="@color/colorIgnesPrimary"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/marker_gravity"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#000000"
                            android:fontFamily="@font/quicksand_light"
                            android:text="Gravity"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/marker_user_profile_pic"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:src="@drawable/usermarialeal" />

                        <EditText
                            android:id="@+id/marker_comment"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/button_white"
                            android:hint="Comment..."
                            android:textSize="20dp" />


                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <include layout="@layout/sidebarnavigation" />

    </android.support.v4.widget.DrawerLayout>


</LinearLayout>